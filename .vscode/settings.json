{
  "editor.defaultFormatter": "dbaeumer.vscode-eslint",
  "editor.formatOnSave": false, // 默认情况下使用prettier格式化代码 , 每次保存的时候自动格式化Prettier
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc",
    "markdown",
    "yaml"
  ],
  "git.enableSmartCommit": true,
  "GitCommitPlugin.MaxSubjectCharacters": 72,
  "liveServer.settings.port": 5501,
  "cSpell.words": [
    "commitlint",
    "rviso",
    "Undefinedable"
  ],
}
